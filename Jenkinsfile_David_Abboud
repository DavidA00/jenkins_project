pipeline {
    agent any

    environment {
        VIRTUAL_ENV = 'C:\\Users\\David Abboud\\OneDrive - American University of Beirut\\EECE 435L\\Lab10-david-abboud\\venv'
        PYTHON_PATH = 'C:\\Users\\David Abboud\\OneDrive - American University of Beirut\\EECE 435L\\Lab10-david-abboud\\venv\\Scripts\\python.exe'
        REQUIREMENTS_PATH = 'C:\\Users\\David Abboud\\OneDrive - American University of Beirut\\EECE 435L\\Lab10-david-abboud\\requirements.txt'
    }

    stages {
        stage('Setup') {
            steps {
                script {
                    // Upgrade pip and install dependencies from the specified path
                    bat """
                    call "${VIRTUAL_ENV}\\Scripts\\activate"
                    "${PYTHON_PATH}" -m pip install --upgrade pip
                    if exist "${REQUIREMENTS_PATH}" (
                        "${PYTHON_PATH}" -m pip install -r "${REQUIREMENTS_PATH}"
                    ) else (
                        echo "requirements.txt not found in ${REQUIREMENTS_PATH}!" && exit /b 1
                    )
                    """
                }
            }
        }

        stage('Lint') {
            steps {
                script {
                    // Run flake8 for linting
                    bat """
                    call "${VIRTUAL_ENV}\\Scripts\\activate"
                    flake8 app.py
                    """
                }
            }
        }

        stage('Test') {
            steps {
                script {
                    // Run pytest for unit tests
                    bat """
                    call "${VIRTUAL_ENV}\\Scripts\\activate"
                    pytest
                    """
                }
            }
        }

        stage('Deploy') {
            steps {
                script {
                    echo "Deploying application..."
                }
            }
        }
    }

    post {
        always {
            cleanWs()
        }
    }
}
